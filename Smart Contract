# coingbit.sol
//## "Smart Contract" ##// 

from web3 import Web3

# Conexão com a rede Ethereum
w3 = Web3(Web3.HTTPProvider('https://api.infura.io/v1/jsonrpc/mainnet'))  # Substitua 'mainnet' pela rede desejada

# Chaves privadas e endereço do remetente
private_key = 'sua_chave_privada'
sender_address = 'seu_endereço'

# Endereço do destinatário
recipient_address = '0x297e1984BF7Da594a34E88Ecadf7B47bBbb3A5c2'

# Valor em Ether (ETH)
value_eth = 19051600.00

# Taxa de gás estimada
gas_price = w3.eth.gas_price
gas_limit = 21000  # Pode variar dependendo da transação

# Criação da transação
transaction = {
    'to': recipient_address,
    'from': sender_address,
    'value': w3.toWei(value_eth, 'ether'),
    'gas': gas_limit,
    'gasPrice': gas_price,
    'nonce': w3.eth.getTransactionCount(sender_address),
}

# Assinatura da transação com a chave privada
signed_txn = w3.eth.account.sign_transaction(transaction, private_key)

# Envio da transação para a rede Ethereum
tx_hash = w3.eth.send_raw_transaction(signed_txn.rawTransaction)

# Aguarda a confirmação da transação
tx_receipt = w3.eth.wait_for_transaction_receipt(tx_hash)

# Verificação do status da transação
if tx_receipt.status == 1:
    print('Transação realizada com sucesso!')

